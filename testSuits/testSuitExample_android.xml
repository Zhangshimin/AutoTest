<?xml version="1.0" encoding="UTF-8"?>
<suite name="precodition">
    <!--platformName in  {web ,android ,ios }-->
    <parameter name="platformName" value="Android"/>
    <!--APP PARAM-->
    <parameter name="appName" value="XiaonengChatDemo3.apk"/>
    <parameter name="filePath" value="/apps"/>
    <parameter name="platformVersion" value="5.1"/>
    <parameter name="deviceName" value="Nexus_4"/>
    <parameter name="appPackage" value="com.example.androidsdk"/>
    <parameter name="appActivity" value="com.example.androidsdk.MainActivity"/>
    <parameter name="port" value="5743"/>
    <parameter name="timeout" value="30"/>
    <parameter name="udid" value="emulator-5554"/>//adb devices 获取
	<!--WEB PARAM-->
    <parameter name = "browser_name" value = "chrome"/>
    <parameter name = "remote_url" value = ""/>

	<!--enabled="true"让测试生效，可根据情况开启或关闭某些测试-->
    <test name="APP_Tests" preserve-order="true">
        <groups>
            <define name="p0">
                <include name="p0"/>
            </define>
            <define name="p1">
                <include name="p1"/>
            </define>
            <define name="p2">
                <include name="p2"/>
            </define>
            <define name="p3">
                <include name="p3"/>
            </define>
            <define name="p4">
                <include name="p4"/>
            </define>
            <run>
                <include name="p0"/>
                <include name="p1"/>
                <include name="p2"/>
                <!--<include name="p3"/>-->
                <!--<include name="p4"/>-->
                <!--<exclude name="xxxx" />-->
            </run>
            <dependencies>
                <group name="p1" depends-on="p0"></group>
                <!-- name,depends-on均为参数为必须 -->
                <group name="p2" depends-on="p0"></group>

                <group name="p3" depends-on="p0"></group>
                <group name="p4" depends-on="p0"></group>
            </dependencies>
        </groups>
        <classes>
            <parameter name="example" value="example"/>
            <class name="com.xiaoneng.uiautotest.testsuits.testcases.app.Example_Tests"/>
        </classes>
    </test>

    <listeners>
        <listener class-name="com.xiaoneng.uiautotest.util.testng.TestResultListener"/>
        <listener class-name="com.xiaoneng.uiautotest.util.testng.RetryListener"/>
    </listeners>
</suite>